{
  "name": "image-processing-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "clean": "rimraf build/",
    "copy:views": "copyfiles -f src/views/* build/views",
    "copy:images": "copyfiles -f src/images/*.jpg build/images",
    "build": "yarn clean && yarn copy:views && yarn copy:images && npx tsc",
    "start:prod": "yarn build && node build/index.js",
    "jasmine": "jasmine",
    "test": "npx tsc && yarn jasmine",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "format:quick": "pretty-quick --staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "fs-extra": "^10.0.0",
    "helmet": "^4.6.0",
    "jasmine": "^3.7.0",
    "jasmine-spec-reporter": "^7.0.0",
    "morgan": "^1.10.0",
    "sharp": "^0.28.3",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "@types/ejs": "^3.0.6",
    "@types/express": "^4.17.12",
    "@types/express-validator": "^3.0.0",
    "@types/fs-extra": "^9.0.11",
    "@types/jasmine": "3.6.9",
    "@types/morgan": "^1.9.2",
    "@types/sharp": "^0.28.2",
    "@types/supertest": "^2.0.11",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
